{
  "dependencies": {
    "fuse.js": "^3.4.6",
    "preact": "^10.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-typescript": "^2.1.0",
    "@types/chrome": "^0.0.91",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^4.0.1",
    "imagemin-cli": "^5.1.0",
    "imagemin-pngquant": "^8.0.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "typescript": "^3.7.4"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "cp ./src/*.css ./lib",
    "build:html": "cp ./src/*.html ./lib",
    "build:image": "imagemin --out-dir=./lib --plugin=pngquant ./src/**/*.png",
    "build:manifest": "node -p 'JSON.stringify(require(`./src/manifest`), null, 2)' > ./lib/manifest.json",
    "build:ts": "rollup -c",
    "fixpack": "npx fixpack",
    "lint": "eslint --cache --ext .js,.ts .",
    "watch": "run-p -l watch:*",
    "watch:ts": "tsc -w"
  }
}
