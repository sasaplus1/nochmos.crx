{
  "browserslist": [
    "last 3 Chrome versions"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "comlink": "^4.3.0",
    "fuse.js": "^6.0.0",
    "preact": "^10.3.4",
    "typescript-fsa": "^3.0.0",
    "typescript-fsa-reducers": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@rollup/plugin-typescript": "^2.1.0",
    "@storybook/addon-actions": "^6.0.0",
    "@storybook/addon-knobs": "^6.0.0",
    "@storybook/preact": "^6.0.0",
    "@storybook/preset-typescript": "^3.0.0",
    "@types/chrome": "^0.0.124",
    "@types/classnames": "^2.2.10",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-loader": "^8.0.6",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^4.0.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^8.0.0",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.0",
    "postcss": "^8.0.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^8.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.0",
    "rollup": "^2.0.0",
    "stylelint": "^13.2.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-loader": "^8.0.0",
    "typescript": "^4.0.0"
  },
  "engines": {
    "node": ">=12"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "postcss ./src/popup.css -o ./lib/popup.css",
    "build:html": "cp ./src/*.html ./lib",
    "build:json": "node -p 'JSON.stringify(require(`./src/manifest`), null, 2)' > ./lib/manifest.json",
    "build:png": "imagemin ./src/*.png --out-dir=./lib --plugin=pngquant",
    "build:svg": "imagemin ./src/*.svg --out-dir=./lib --plugin=svgo",
    "build:ts": "rollup -c",
    "check-types": "tsc --jsx react --incremental --noEmit",
    "fix": "run-s fix:*",
    "fix:css": "stylelint --cache --fix ./**/*.css",
    "fix:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --fix .",
    "fixpack": "npx fixpack",
    "lint": "run-s lint:*",
    "lint:css": "stylelint --cache ./**/*.css",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx .",
    "prestorybook": "postcss ./src/popup.css -o ./.storybook/static/popup.css",
    "release": "zip -j ./nochmos.zip ./lib/*",
    "storybook": "start-storybook --static-dir ./.storybook/static",
    "watch": "run-p -l watch:*",
    "watch:css": "onchange -v 'src/*.css' -- run-s build:css",
    "watch:html": "onchange -v 'src/*.html' -- run-s build:html",
    "watch:json": "onchange -v 'src/manifest.js' -- run-s build:json",
    "watch:png": "onchange -v 'src/*.png' -- run-s build:png",
    "watch:svg": "onchange -v 'src/*.svg' -- run-s build:svg",
    "watch:ts": "onchange -v 'src/**/*.{ts,tsx}' -- run-s build:ts"
  }
}
