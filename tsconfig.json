{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "incremental": true,
    "lib": [
      "dom",
      "ES2019.Array"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "newLine": "lf",
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "./src/**/*"
  ]
}
